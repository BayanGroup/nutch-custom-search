<?xml version="1.0" encoding="UTF-8"?>

<config xmlns="http://bayan.ir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://bayan.ir extractors.xsd"
	defaultEngine="xpath">
	<types>
		<type name="hello" converter="ir.co.bayan.simorq.zal.extractor.convert.TestConverter" />
	</types>
	<fields>
		<field name="f1" />
		<field name="f2" />
		<field name="f3" />
		<field name="f4" />
		<field name="f5" />
		
		<field name="f6" />
		<field name="f6.1" />
		
		<field name="f7" />
		<field name="f8" />
		<field name="f9" />
		<field name="f10" />
		
		<field name="f11" />
		
		<field name="f12" type="hello"/>
		
		<field name="url" />
		<field name="content" />
	</fields>
	<documents>
		<document id="d1" url="^http://.+?\.blog.ir">
			<extract-to field="f1">
				<text>
					<expr value="//book[@title='b1']" />
				</text>
			</extract-to>
			<extract-to field="f2">
				<concat delimiter="-">
					<text>
						<expr value="//book[@title]/@title" />
					</text>
				</concat>
			</extract-to>
			<extract-to field="f3">
				<text>
					<expr value="//b:book[@title='b1']"/>
				</text>
			</extract-to>
			<extract-to field="f4">
				<text>
					<expr value="//dns:book[@title='b3']"/>
				</text>
			</extract-to>
			<extract-to field="f5">
				<replace pattern="content(.*)" substitution="$1">
					<text>
						<expr value="//book[@title='b1']"/>
					</text>
				</replace>
			</extract-to>
		</document>
		<document id="d2" url="^http://.+?\.blog.ir2">
			<fragment root="//books/category[@name]">
				<extract-to field="url">
					<text>
						<expr value="./@name" />
					</text>
				</extract-to>
				<extract-to field="content">
					<text>
						<expr value=".//book" />
					</text>
				</extract-to>
			</fragment>
		</document>
		<document id="d3" url="^http://.+?\.blog.ir25" root="//books/category[@name]">
			<extract-to field="url">
				<text>
					<expr value="./@name" />
				</text>
			</extract-to>
			<extract-to field="content">
				<text>
					<expr value=".//book" />
				</text>
			</extract-to>
		</document>
		<document url="^http://.+?\.blog.ir3">
			<outlinks>
				<link root="//category[@name='c2']">
					<href>
						<resolve>
							<attribute name="title">
								<expr value="./book" />
							</attribute>
						</resolve>
					</href>
					<anchor>
						<text>
							<expr value="./book" />
						</text>
					</anchor>
				</link>
				<link>
					<href>
						<concat delimiter="/">
							<url />
							<constant value="sitemap.xml" />
						</concat>
					</href>
				</link>
			</outlinks>
		</document>
	</documents>
</config>