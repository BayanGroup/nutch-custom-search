<?xml version="1.0" encoding="UTF-8"?>

<config xmlns="http://bayan.ir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://bayan.ir extractors.xsd">
	<types>
		<type name="hello" converter="ir.co.bayan.simorq.zal.nutch.extractor.TestConverter" />
	</types>
	<fields>
		<field name="f1" />
		<field name="f2" />
		<field name="f3" />
		<field name="f4" />
		<field name="f5" />
		
		<field name="f6" />
		<field name="f6.1" />
		
		<field name="f7" />
		<field name="f8" />
		<field name="f9" />
		<field name="f10" />
		
		<field name="f11" />
		
		<field name="f12" type="hello"/>
		
		<field name="id" />
		<field name="content" />
	</fields>
	<documents>
		<document id="base" url="^http://.+?\.blog.ir">
			<extract-to field="f1">
				<constant value="t1"/>
			</extract-to>
			<extract-to field="f2">
				<concat>
					<text>
						<expr value="head > title"/>
					</text>
				</concat>
			</extract-to>
			<extract-to field="f3">
				<concat>
					<attribute name="title">
						<expr value=".title-div"/>
					</attribute>
				</concat>
			</extract-to>
			<extract-to field="f4">
				<url />
			</extract-to>
			
			<extract-to field="f5">
				<concat>
					<constant value="t1"/>
					<text>
						<expr value="head > title"/>
					</text>
					<attribute name="title">
						<expr value=".title-div"/>
					</attribute>
					<url />
				</concat>
			</extract-to>
			
			<extract-to field="f6">
				<concat>
					<replace pattern="(t)(\d)+" substitution="$2-$1">
						<text>
							<expr value="head > title"/>
						</text>
					</replace>
				</concat>
			</extract-to>
			<extract-to field="f6.1">
				<concat>
					<replace pattern="(.+?)T(.+)" substitution="$1">
						<attribute name="content">
							<expr value="meta[name=date]"/>
						</attribute>
					</replace>
				</concat>
			</extract-to>
			
			<extract-to field="f7">
				<concat>
					<text>
						<expr value="div.target"/>
					</text>
				</concat>
			</extract-to>
			<extract-to field="f8">
				<text>
					<first>
						<expr value="div.target"/>
					</first>
				</text>
			</extract-to>
			<extract-to field="f9">
				<size>
					<expr value="div.target"/>
				</size>
			</extract-to>
			<extract-to field="f10">
				<text>
					<last>
						<expr value="div.target"/>
					</last>
				</text>
			</extract-to>
		</document>
		
		<document url="^http://.+?\.blog.ir2" inherits="base">
			<extract-to field="f11">
				<constant value="t1" />
			</extract-to>
			<extract-to field="f12">
				<constant value="world!" />
			</extract-to>
		</document>
		
		<document url="^http://.+?\.blog.ir3">
			<partition>
				<expr value=".doc"/>
			</partition>
			<extract-to field="id">
				<concat>
					<attribute name="href">
					 	<expr value="a"/>
					 </attribute>
				</concat>
			</extract-to>
			<extract-to field="content">
				<concat>
					<text>
						<expr value="a" />
					</text>
				</concat>
			</extract-to>
		</document>
	</documents>
</config>