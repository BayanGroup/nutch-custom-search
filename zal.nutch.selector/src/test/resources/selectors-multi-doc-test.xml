<?xml version="1.0" encoding="UTF-8"?>

<config xmlns="http://bayan.ir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://bayan.ir css-paths.xsd">
	<fields>
		<field name="content" />
	</fields>
	<documents>
		<document url="^http://.+?\.blog.ir" selector=".doc">
			<extract-to field="content">
				<content selector="span" />
			</extract-to>
		</document>
	</documents>
</config>